; 0 = .  --- 1 = + ---- 2 = |-
(define DecToTer
  (lambda(n)
     (if (> n 0)
     (let (( decTer (DecToTer (quotient n 3)) ))
     (let (( sign(cond ((= (remainder n 3) 0) ".")
          ((= (remainder n 3) 1) "+")
          ((= (remainder n 3) 2) "|-")
       ) ))
    (string-append
     decTer
     ;(if (string=? (substring (DecToTer (quotient n 3)) 0 1) "|")
     sign
     ;""
     ;)
    )
    )
       )
     ""
   )
  )
